<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme -->
    <style name="Theme.MealMap" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <item name="editTextColor">@android:color/black</item>
        <item name="android:textColorHint">#8C8C8C</item>
        <item name="android:fontFamily">@font/sfprodisplayregular</item>
    </style>

    <!-- No ActionBar variant -->
    <style name="Theme.MealMap.NoActionBar" parent="Theme.MealMap">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CheckBoxStyle" parent="Widget.MaterialComponents.CompoundButton.CheckBox">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">4dp</item>
        <item name="android:buttonTint">@color/checkbox_color</item>
    </style>

    <!-- Color resource -->
    <color name="checkbox_color">#2196F3</color>
    <color name="strikethrough_color">#757575</color>


    <style name="Theme.MealMap.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />
    <style name="Theme.MealMap.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>
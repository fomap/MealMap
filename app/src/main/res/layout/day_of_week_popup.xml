<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="16dp">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Select Days"
        android:textSize="20sp"
        android:textStyle="normal"
        android:textAlignment="center"
        android:layout_margin="16dp" />

    <CheckBox
        android:id="@+id/chk_monday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Monday"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/chk_tuesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Tuesday"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/chk_wednesday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Wednesday"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/chk_thursday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Thursday"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/chk_friday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Friday"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/chk_saturday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Saturday"
        android:textSize="20sp"/>

    <CheckBox
        android:id="@+id/chk_sunday"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Sunday"
        android:textSize="20sp"/>

    <Button
        android:id="@+id/btn_saveToDB"
        android:backgroundTint="#A3B18A"
        android:textColor="@color/white"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:layout_gravity="center"
        android:layout_marginTop="15dp"/>
</LinearLayout>